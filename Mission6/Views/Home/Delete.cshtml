@{
    ViewData["Title"] = "Delete Movie";
    @model MovieModel
}

<div class="row mb-2">
    <h2>You are about to delete a movie.</h2>
</div>

<div class="row mt-1 mb-2">
    <h3>Are you sure you want to delete @Model.Title?</h3>
</div>

<form method="post" asp-controller="Home" asp-action="Delete">
    <div class="row mt-2 mb-2">
        <button class="btn btn-danger" type="submit">Delete</button>
    </div>

    <input type="hidden" asp-for="MovieId"/>
</form>

<div class="row mt-2 mb-2">
    <a class="btn btn-sm btn-outline-primary" asp-controller="Home" asp-action="ListMovies">Cancel</a>
</div>